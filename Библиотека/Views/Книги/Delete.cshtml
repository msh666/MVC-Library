@model Библиотека.Книги

@{
    ViewBag.Title = "Delete";
}

<h2>Удаление</h2>

<h3>Вы точно хотите удалить?</h3>
<div>
    <h4>Книги</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Фото)
        </dt>

        <dd>
            @Html.Raw("<img style='width:100px; height:130px;' src=\"data:image/jpeg;base64,"
                      + Convert.ToBase64String(Model.Фото) + "\" />")
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Название)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Название)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Автор)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Автор)
        </dd>

        <dt>
            @Html.DisplayName("Год написания")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Год_написания)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Описание)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Описание)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Html.ActionLink("Назад", "Index") |
            <input type="submit" value="Удалить" class="btn btn-default"/>
        </div>
    }
</div>
